<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AccountHolderController">
	<MenuBar prefHeight="31.0" prefWidth="700.0">
      <menus>
         <Menu mnemonicParsing="false" text="Account">
           <items>
             <MenuItem fx:id="editDetails" mnemonicParsing="false" onAction="#handleButtonAction" text="Edit Details" />
           </items>
         </Menu>
         <Menu mnemonicParsing="false" text="Bookings">
			<items>
             <MenuItem fx:id="bookCar" mnemonicParsing="false" onAction="#handleButtonAction" text="Book a Car" />
           </items>           
         </Menu>
      </menus>
     </MenuBar>
   <Label fx:id="welcomeMessage" layoutX="399.0" layoutY="31.0" prefHeight="31.0" prefWidth="216.0" textAlignment="RIGHT" wrapText="true">
      <font>
         <Font size="18.0" />
      </font>
   </Label>
   <Button fx:id="exitButton" layoutX="675.0" mnemonicParsing="false" onAction="#ExitForm" prefHeight="31.0" prefWidth="24.0" text="X" />
</AnchorPane>
